<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Copy Assembly" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="tbTargetFolder" Height="23" Margin="10,10,90,0" TextWrapping="Wrap" Text="Select the target folder" VerticalAlignment="Top"/>
        <Button x:Name="btnBrowse" Content="Browse..." Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"/>
        <ListBox x:Name="lbFileNames" Margin="10,38,10,37"/>
        <Button x:Name="btnCopy" Content="Copy" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <Button x:Name="btnAttach" Content="Attach" Margin="0,0,90,10" ToolTip="Attach to Solid Edge and list active assembly's files" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75"/>
        <CheckBox x:Name="cbCopyHiddenFiles" Content="Copy Hidden Files" HorizontalAlignment="Left" Margin="10,0,0,10" Height="16" VerticalAlignment="Bottom" Width="291" IsChecked="True"/>

    </Grid>
</Window>
