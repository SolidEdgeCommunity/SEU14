<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Copy Assembly" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="TargetFolder" Height="23" Margin="10,10,90,0" TextWrapping="Wrap" Text="Target Folder" VerticalAlignment="Top"/>
        <ListBox x:Name="FileNames" Margin="10,38,10,37"/>
        <Button x:Name="buttonCopy" Content="Copy" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="buttonCopy_Click"/>
        <Button x:Name="buttonAttach" Content="Attach" Margin="0,0,90,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="buttonAttach_Click"/>
        <CheckBox x:Name="CopyHiddenFiles" Content="Copy Hidden Files" HorizontalAlignment="Left" Margin="10,0,0,10" Height="16" VerticalAlignment="Bottom" Checked="CopyHiddenFiles_Checked" Unchecked="CopyHiddenFiles_Checked"/>
        <Button x:Name="buttonBrowse" Content="Browse..." Margin="0,11,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Click="buttonBrowse_Click"/>

    </Grid>
</Window>
